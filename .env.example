# Local Pigeon Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# OLLAMA SETTINGS
# =============================================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# =============================================================================
# DISCORD BOT (Optional)
# =============================================================================
# Get your token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=
DISCORD_ALLOWED_CHANNELS=  # Comma-separated channel IDs (leave empty for all)
DISCORD_ADMIN_USERS=  # Comma-separated user IDs for admin commands

# =============================================================================
# TELEGRAM BOT (Optional)
# =============================================================================
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_USERS=  # Comma-separated user IDs (leave empty for all)

# =============================================================================
# GOOGLE WORKSPACE (Optional)
# =============================================================================
# Download credentials.json from Google Cloud Console
# https://console.cloud.google.com/apis/credentials
GOOGLE_CREDENTIALS_PATH=credentials.json

# =============================================================================
# STRIPE PAYMENTS (Optional)
# =============================================================================
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# COINBASE AGENTKIT (Optional)
# =============================================================================
# For crypto wallet functionality
# Get from https://portal.cdp.coinbase.com/
CDP_API_KEY_NAME=
CDP_API_KEY_PRIVATE_KEY=

# =============================================================================
# PAYMENT APPROVAL SETTINGS
# =============================================================================
# Threshold above which payments require human approval (in USD)
PAYMENT_APPROVAL_THRESHOLD=25.00
# Default daily spending limit (in USD)
PAYMENT_DAILY_LIMIT=100.00

# =============================================================================
# WEB UI SETTINGS
# =============================================================================
WEBUI_HOST=127.0.0.1
WEBUI_PORT=7860
WEBUI_SHARE=false  # Set to true to create a public Gradio link

# =============================================================================
# SECURITY
# =============================================================================
# Encryption key for storing credentials (auto-generated on first run if empty)
ENCRYPTION_KEY=
